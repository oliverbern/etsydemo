<div class="jumbotron">
    <h1>Handcreafted items from around the world.</h1>
    <h2>Discover one-of-a-kind items</h2>
</div>

<div class="center">
<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>      
            <div class="caption">
              <%= listing.name %>
              <%= number_to_currency(listing.price) %><br>
              <%= "Sold by #{listing.user.name}" %><br>
              <%= link_to 'Show', listing, class: "btn btn-link" %>
          </div>
        </div>     
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>
</div>